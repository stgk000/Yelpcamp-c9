<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1>
                <center>Create a New CampGround</center>
            </h1>
            <div id="form-handle">
                <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                    <input requires required class="form-control spacing-border" type="text" name="name" placeholder="name">
                    <div class="spacing-border">
                        <label for="image">image</label>
                        <input required id="image" accept="image/*" type="file" class="btn" name="image">
                    </div>
                    <input requires required class="form-control spacing-border" type="price" name="price" min="0.1" step="0.1" placeholder="price/night">
                    <div class="spacing-border">
                        <lable for="location">location</lable>
                        <input required class="form-control spacing-border" type="text" name="location" id="location" placeholder="enter the location">
                    </div>
                    <textarea required class="form-control spacing-border" maxlength="1100" rows="3" name="desc" placeholder="Say something"></textarea>
                    <button class="btn btn-lg btn-block submit-btn"> Submit! </button>
                </form>
                <a class="spacing-border" href="/">Go Back</a>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>